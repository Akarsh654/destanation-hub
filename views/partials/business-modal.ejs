<!-- Modal-->
<div style = "height: 100%;" class="modal fade" id="playerModal" tabindex="-1" role="dialog" aria-labelledby="playerModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div style = "height:80%;" class="modal-content pr-2 pl-2">
            <div class="modal-header">
                <h5 class="modal-title" id="playerModalLabel">Add New Business</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label>Business Name:</label>
                    <input type="text" id="businessName" name="business_name" class="form-control" placeholder="Enter Business name" required>
                </div>
                <div class="form-group row" style = "margin-top: -15px;">
                    <label>Contact No:</label>
                    <input type="number" id="business_mobile_no" name="mobile_no" class="form-control" placeholder="Contact Number" required>
                </div>
                <div class="form-group row" style = "margin-top: -15px;">
                    <label>Website url</label>
                    <input type="text" id="business_website_url" name="website_url" class="form-control" placeholder="Web URL" required>
                </div>
            
               
                <div class="form-group row" style = "margin-top: -15px;">
                    <label>Business Address</label>
                    <input type="text" id="business_address" name="address" class="form-control" placeholder="Enter Business Address" required>
                </div>

              
                <div class = "form-group row" id = "select-body" style = "margin-top: -6px;">
                    <label>Business Keywords</label>
                    <select class = "form-control" id = "keywords-select-dropdown">
                        <option></option>
                    </select>
                    <ul class="selected-option selected-keyword-options cause-select-option"  style= "width: 100%; " id= "selected-keywords-options">
                    </ul>
                </div>
                <div class="form-group row" style = "margin-top: -15px;">
                    <label>Business Description</label>
                    <textarea type="text" id="business_description" name="business_description" class="form-control" placeholder="Business Description" required></textarea>
                </div>
                <!-- <div class="form-group row">
                    <label>Password:</label>
                    <input type="password" id="playerPassword" name="password" class="form-control" required>
                </div> -->
                
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelPlayerBtn" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Cancel</button>
                <button type="button" id="playerBtn" class="btn btn-primary font-weight-bold">Add</button>
            </div>
        </div>
    </div>
</div>